# Specify your gem's dependencies in moribus.gemspec
gemspec

group :development, :test do
  gem "pry"
end

group :development do
  gem "redcarpet"
  gem "yard"
end

group :test do
  gem "simplecov",           require: false
  gem "simplecov-rcov-text", require: false

  gem "timecop"
end
